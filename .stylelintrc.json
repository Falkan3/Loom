{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": "tab",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "function",
                    "if",
                    "else",
                    "for",
                    "return",
                    "warn",
                    "mixin",
                    "extend",
                    "use",
                    "include",
                    "forward",
                    "content",
                    "at-root"
                ]
            }
        ],
        "no-invalid-position-at-import-rule": null,
        "no-duplicate-selectors": null
    }
}
